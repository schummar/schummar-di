{
  "name": "@schummar/di",
  "type": "module",
  "version": "0.0.0",
  "description": "A simple dependency injection library for TypeScript.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "lint": "runp lint:*",
    "lint:oxlint": "oxlint",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsup",
    "prepublishOnly": "runp lint test build :p publint"
  },
  "keywords": [
    "typescript",
    "dependency-injection",
    "di",
    "inversion-of-control",
    "ioc"
  ],
  "author": "Marco Schumacher <marco@schumacher.dev>",
  "license": "ISC",
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.6.2"
  },
  "devDependencies": {
    "@nx/js": "^20.5.0",
    "@schummar/runp": "^2.2.2",
    "@vitest/coverage-v8": "^3.0.8",
    "nx": "^20.5.0",
    "oxlint": "^0.15.14",
    "prettier": "^3.5.3",
    "publint": "^0.3.12",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  },
  "files": [
    "dist"
  ]
}