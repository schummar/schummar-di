{
  "name": "@schummar/di",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "version": "0.0.0",
  "description": "A simple dependency injection library for TypeScript.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "lint": "runp lint:*",
    "lint:oxlint": "oxlint",
    "lint:prettier": "prettier --check src",
    "lint:tsc": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "build": "tsdown --clean --format=esm,cjs",
    "prepublishOnly": "runp lint test build :p publint"
  },
  "keywords": [
    "typescript",
    "dependency-injection",
    "di",
    "inversion-of-control",
    "ioc"
  ],
  "author": "Marco Schumacher <marco@schumacher.dev>",
  "license": "ISC",
  "volta": {
    "node": "22.14.0",
    "pnpm": "10.6.2"
  },
  "devDependencies": {
    "@nx/js": "^21.4.1",
    "@schummar/runp": "^2.2.2",
    "@swc-node/register": "^1.11.1",
    "@swc/core": "^1.13.5",
    "@vitest/coverage-v8": "^3.2.4",
    "nx": "^21.4.1",
    "oxlint": "^1.12.0",
    "prettier": "^3.6.2",
    "publint": "^0.3.12",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ]
}